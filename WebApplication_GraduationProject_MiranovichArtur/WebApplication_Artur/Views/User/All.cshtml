@using  WebApplication_Artur.Services
@inject UserService userService

@model List<UserForRemoveVieqModel>


<div>

    @foreach (var user in Model)
    {
        <div class="infoDelUser">

            <img src="@user.Awatar" class="logoUsersAll" />

            <div class="oneUserDelet">

                <div class="oneUserDeletText">
                    @user.Name (@user.Login)
                </div>

            </div>

            <div class="muwInputDelet">

                    @if (userService.IsDontAnminMyUser(user.Id))
                    {
                        <a href="/User/RemoveMy?id=@user.Id" class="imputDelet">
                            <img src="~/image/Delete2.png" alt="@WebApplication_Artur.Localize.Lang.DeleteUser" class="logoUsersDel" id="1" />
                        </a>
                    }

            </div>

        </div>
    }
</div>