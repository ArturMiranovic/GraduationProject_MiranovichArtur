<html>

<head>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/user.css" />
    <link rel="stylesheet" href="~/css/home.css" />
    <link rel="stylesheet" href="~/css/bike.css" />

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/localize.js"></script>
    @RenderSection("Head", false)
</head>

<body class="body">

    <div class="header">

        <div class="name-of-the-site">

            @WebApplication_Artur.Localize.Lang.NameOfTheSite

        </div>

        @if (User.Identity.IsAuthenticated)
        {

            <div class="exit-registration">
                <a href="/User/Logout">Выход</a>
            </div>

        }
        else
        {
            <div class="user">
                <a href="/User/Login"> @WebApplication_Artur.Localize.Lang.Login</a>
                /
                <a href="/User/Registration">@WebApplication_Artur.Localize.Lang.Register</a>

            </div>
        }
    </div>

    <div class="center-block">

        <div class="menu">
            <div class="inmenu">

                <div class="menuCell">
                    <a href="/Home/Index">@WebApplication_Artur.Localize.Lang.Home</a>
                </div>

                <div class="menuCell">
                    <a href="/Bike/AddBike">@WebApplication_Artur.Localize.Lang.SellABike</a>
                </div>

                <div class="menuCell">
                    <a href="/Bike/All">@WebApplication_Artur.Localize.Lang.GalleryOfOffers</a>
                </div>

                <div class="menuCell">
                    <a href="/User/All">@WebApplication_Artur.Localize.Lang.UserList</a>
                </div>

                <div class="menuCell">
                    <a href="/User/All">Продажа запчастей spares</a>
                </div>

                <div class="menuCell">
                    <a href="/User/All">велосипеды по фильтрам и цене</a>
                </div>

                <div class="menuCell">
                    <a href="/User/All">Список избранных велосипедов</a>
                </div>

                <div class="menuCell">
                    <a href="/User/All">сравнение избранных</a>
                </div>

                <div class="menuCell">
                    <a href="/User/All">страница пользователя</a>
                </div>

            </div>

        </div>

        <div class="content">
            @RenderBody()
        </div>

    </div>

    <div class="footer">

        <select class="language">

            <option value="1">RU</option>
            <option value="2">EN</option>
            <option value="3">ES</option>

        </select>

        подвал

    </div>

</body>

</html>
