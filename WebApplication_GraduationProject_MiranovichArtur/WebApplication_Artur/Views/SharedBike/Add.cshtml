@model AddSharedBikeViewModel

<form action="/SharedBike/Add" method="post" class="formBikeAddShared">


    <div class="addBlock">

        <input class="pooof" name="BikeId" value=@Model.BikeId />



        <div class="addOneSharedBike">
            @Html.EditorFor(x => x.BikeSize)  - укажите рвзмер рамы.
        </div>

        <div class="addOneSharedBike">
            @Html.EditorFor(x => x.RearChainrings)  - укажите количество задних звёзд.
        </div>

        <div class="addOneSharedBike">
            @Html.EditorFor(x => x.FrontChainrings)  - укажите количество передних звёзд.
        </div>

        <div class="addOneSharedBike">
            @Html.EditorFor(x => x.WheelDiametr)  - укажите диаметр колёс.
        </div>

        <div class="addOneSharedBike">
            @Html.EditorFor(x => x.BrakeDiametr)  - укажите диаметр тормозов.
        </div>

        <div class="addOneSharedBike">

            <select class="BikeClass" id="BikeClass" name="BikeClass">

                <option value="0">Mountain Bike</option>
                <option value="1">Road Bike</option>
                <option value="2">Touring  Bike</option>
                <option value="3">Gravel Bike</option>

            </select>

            - rласс велосипеда.

        </div>

        <div class="addOneSharedBike">
            <input type="submit" value="применить" class="inputaddBlock" />
        </div>

    </div>



</form>
